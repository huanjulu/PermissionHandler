<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <Button
        android:id="@+id/camera_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_camera_permission" />

    <Button
        android:id="@+id/storage_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_storage_permission" />

    <Button
        android:id="@+id/camera_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_camera_permission" />

    <Button
        android:id="@+id/storage_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_storage_permission" />

</LinearLayout>